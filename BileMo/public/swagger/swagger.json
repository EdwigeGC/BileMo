{
    "openapi": "3.0.0",
    "info": {
        "title": "BileMo",
        "description": "This API provides to BileMo referenced user to access its products and manage their customers",
        "version": "1.0.0"
    },
    "paths": {
        "/api/customers": {
            "get": {
                "tags": [
                    "Customer"
                ],
                "summary": "Provides the collection of customer resources for a specific user.",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "Your user's ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "The collection page number",
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "minimum": 1
                        },
                        "example": "1"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Customer list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Customer"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid or missing token"
                    }
                },
                "security": [
                    {
                        "scalar": "bearer"
                    }
                ]
            }
        },
        "/api/customers/{id}": {
            "get": {
                "tags": [
                    "Customer"
                ],
                "summary": "Provides one customer resource for a specific user.",
                "operationId": "App\\Controller\\CustomerController::item",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "customer's Id",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Customer resource",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Customer"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid ID supplied"
                    },
                    "401": {
                        "description": "Invalid or missing token"
                    }
                },
                "security": [
                    {
                        "scalar": "bearer"
                    }
                ]
            }
        },
        "/api/customers/new": {
            "post": {
                "tags": [
                    "Customer"
                ],
                "summary": "Create a new customer",
                "operationId": "App\\Controller\\CustomerController::create",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "description": "Create a new customer",
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "lastName": {
                                        "description": "Create a new customer",
                                        "type": "string"
                                    },
                                    "firstName": {
                                        "description": "Create a new customer",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Customer resource created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Customer"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid data recorded"
                    },
                    "401": {
                        "description": "Invalid or missing token"
                    }
                },
                "security": [
                    {
                        "scalar": "bearer"
                    }
                ]
            }
        },
        "api/customers/{id}/delete": {
            "delete": {
                "tags": [
                    "Customer"
                ],
                "summary": "Delete a customer",
                "operationId": "App\\Controller\\CustomerController::delete",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "customer's Id",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Customer resource deleted"
                    },
                    "400": {
                        "description": "Invalid ID supplied"
                    },
                    "401": {
                        "description": "Invalid or missing token"
                    }
                },
                "security": [
                    {
                        "scalar": "bearer"
                    }
                ]
            }
        },
        "/api/customers/{id}/edit": {
            "put": {
                "tags": [
                    "Customer"
                ],
                "summary": "Edit customer's information",
                "operationId": "App\\Controller\\CustomerController::edit",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "description": "Edit customer's information",
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "lastName": {
                                        "description": "Edit customer's information",
                                        "type": "string"
                                    },
                                    "firstName": {
                                        "description": "Edit customer's information",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Customer resource updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Customer"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid data recorded"
                    },
                    "401": {
                        "description": "Invalid or missing token"
                    }
                },
                "security": [
                    {
                        "scalar": "bearer"
                    }
                ]
            }
        },
        "/api/products": {
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "Provide the collection of all the product resources.",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "The collection page number",
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "minimum": 1
                        },
                        "example": "1"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        },
                        "links": {
                            "Read the details of a product": {
                                "operationId": "item"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "scalar": "bearer"
                    }
                ]
            }
        },
        "/api/products/{id}": {
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "Provides one product resource.",
                "operationId": "App\\Controller\\ProductController::details",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "product's Id",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product resource",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        },
                        "links": {
                            "List of all the product": {
                                "operationId": "list"
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid or missing token"
                    },
                    "400": {
                        "description": "Invalid ID supplied"
                    }
                },
                "security": {
                    "bearerAuth": {
                        "0": "JWT"
                    }
                }
            }
        },
        "/api/login_check": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Provides new token thanks to basic authentication",
                "operationId": "App\\Controller\\SecurityController::api_login",
                "responses": {
                    "200": {
                        "description": "new valid token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Failure: bad username or password"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Customer": {
                "properties": {
                    "id": {
                        "title": "ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Product": {
                "properties": {
                    "id": {
                        "title": "ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "format": "float"
                    },
                    "reference": {
                        "type": "string"
                    },
                    "brand": {
                        "type": "string"
                    },
                    "storageCapacity": {
                        "type": "string"
                    },
                    "operatingSystem": {
                        "type": "string"
                    },
                    "screenSize": {
                        "type": "number",
                        "format": "float"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "description": "The hashed password",
                        "type": "string",
                        "format": "password"
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "401": {
                "description": "Invalid or missing token"
            }
        }
    }
}